<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray1" >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
    
	    <ImageView
	        android:id="@+id/handset_account_details_bank_logo"
	        android:layout_height="60dip"
	        android:layout_width="60dip"
	        android:layout_margin="10dip"
	        android:layout_alignParentLeft="true"/>
    
        <com.moneydesktop.finance.views.LabelEditText 
	        android:id="@+id/handset_bank_details_account_name"
	        style="@style/field"
	        android:layout_width="match_parent"
            android:background="@drawable/text_field_bg_handset"
	        android:layout_height="60dip"
	        android:textColor="@color/gray7"
	        app:labelColor="@drawable/gray3_to_white_text"
	        app:labelSize="10"
	        app:labelText="@string/ct_bal"
	        app:labelIsReverserd="true"
	        android:layout_toRightOf="@id/handset_account_details_bank_logo"
	        android:layout_alignTop="@id/handset_account_details_bank_logo"/>
	    
    </RelativeLayout>
  
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>
  	
    <com.moneydesktop.finance.views.LabelEditText 
        android:id="@+id/handset_bank_details_balance"
        style="@style/field"
        android:layout_width="match_parent"
        android:background="@color/gray1"
        android:layout_height="70dip"
        android:focusable="false"
        android:textColor="@color/gray7"
        app:labelColor="@drawable/gray3_to_white_text"
        app:labelSize="10"
        app:labelText="@string/ct_bal"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>

    
    <com.moneydesktop.finance.views.LabelEditText  
        style="@style/field"
        android:id="@+id/handset_bank_details_type"
        android:layout_width="match_parent"
        android:background="@drawable/text_field_bg_handset"
        android:layout_height="50dip"
        app:labelText="@string/label_account_type"
        android:textColor="@color/gray7"
        app:labelColor="@drawable/gray3_to_white_text"
        app:labelSize="10"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>
  	
  	
  	
  	
  	
  	
  	
  	
  	
  	
    <com.moneydesktop.finance.views.LabelEditText  
        style="@style/field"
        android:id="@+id/handset_bank_details_optional1"
        android:layout_width="match_parent"
        android:background="@drawable/text_field_bg_handset"
        android:layout_height="50dip"
        app:labelText="@string/label_account_type"
        app:labelColor="@drawable/gray3_to_white_text"
        android:textColor="@color/gray7"
        app:labelSize="10"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>  
         
    <com.moneydesktop.finance.views.LabelEditText  
        style="@style/field"
        android:id="@+id/handset_bank_details_optional2"
        android:layout_width="match_parent"
        android:background="@drawable/text_field_bg_handset"
        android:layout_height="50dip"
        app:labelText="@string/label_account_type"
        app:labelColor="@drawable/gray3_to_white_text"
        android:textColor="@color/gray7"
        app:labelSize="10"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker5"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>  
         
    <com.moneydesktop.finance.views.LabelEditText  
        style="@style/field"
        android:id="@+id/handset_bank_details_optional3"
        android:layout_width="match_parent"
        android:background="@drawable/text_field_bg_handset"
        android:layout_height="50dip"
        app:labelText="@string/label_account_type"
        android:textColor="@color/gray7"
        app:labelColor="@drawable/gray3_to_white_text"
        app:labelSize="10"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker6"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>  
  	
  	
  	
  	
  	
  	         
    <com.moneydesktop.finance.views.LabelEditText  
        style="@style/field"
        android:id="@+id/handset_bank_details_exclusions"
        android:layout_width="match_parent"
        android:background="@drawable/text_field_bg_handset"
        android:layout_height="50dip"
        app:labelText="@string/label_exclusions"
        app:labelColor="@drawable/gray3_to_white_text"
        android:textColor="@color/gray7"
        app:labelSize="10"/>
    
  	<com.moneydesktop.finance.views.LineView
         android:id="@+id/view_breaker7"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:lineColor="@color/gray2"
         app:lineStrokeWidth="2dp"
         app:dashLength="3dp" 
         app:isDashed="true"/>  
  	
  	
  	
  	
  	
  	
  	
</LinearLayout>