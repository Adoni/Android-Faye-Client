<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="    http://schemas.android.com/apk/res/main.java.com.moneydesktop.finance"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:background="@drawable/gray4_to_primary" >

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/tablet_filter_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/tablet_filter_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="top" />

    </LinearLayout>

    <TextView
        android:id="@+id/single_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <com.moneydesktop.finance.views.CaretView
        android:id="@+id/caret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        app:color="@color/white"
        app:width="10dp"
        app:height="10dp"
        app:rotation="90" />

    <com.moneydesktop.finance.views.LineView
        android:id="@+id/item_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        app:lineColor="@color/white"
        app:isDashed="true"
        app:dashLength="3dp"
        app:lineStrokeWidth="2dp" />

</RelativeLayout>