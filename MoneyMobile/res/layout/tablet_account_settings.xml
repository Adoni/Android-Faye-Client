<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical" >

    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	    <LinearLayout
	        android:id="@+id/account_settings_container"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="3dip"
	        android:layout_marginRight="3dip"
	        android:background="@drawable/gray_border"
	        android:orientation="vertical" >
	
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="3dip"
	            android:background="@color/white"
	            android:paddingBottom="10dip"
	            android:paddingTop="10dip" >
	
	            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
	            <LinearLayout
	                android:layout_width="0px"
	                android:layout_height="0px"
	                android:focusable="true"
	                android:focusableInTouchMode="true" />
	
	            <TextView
	                android:id="@+id/account_settings_option1_title_txt"
	                android:layout_width="200dip"
	                android:layout_height="50dip"
	                android:layout_marginLeft="-2dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	
	            <TextView
	                android:id="@+id/account_settings_option2_title_txt"
	                android:layout_width="200dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/account_settings_option1_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	            
	       	    <TextView
	                android:id="@+id/account_settings_option3_title_txt"
	                android:layout_width="200dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/account_settings_option2_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	                        
	                        
	            <TextView
	                android:id="@+id/account_settings_option4_title_txt"
	                android:layout_width="200dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/account_settings_option3_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	            
	            <TextView
	                android:id="@+id/account_settings_option5_title_txt"
	                android:layout_width="200dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/account_settings_option4_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	
	            <EditText
	                android:id="@+id/account_settings_option1_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:paddingLeft="10dip"
	                android:layout_toRightOf="@id/account_settings_option1_title_txt"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border" />
	
	            <EditText
	                android:id="@+id/account_settings_option2_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/account_settings_option1_edittxt"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/account_settings_option2_title_txt"
	                android:focusable="false"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border" />
	                
	            <EditText
	                android:id="@+id/account_settings_option3_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/account_settings_option2_edittxt"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/account_settings_option3_title_txt"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border" />
	                
	            <com.moneydesktop.finance.views.LabelEditCurrency
	                android:id="@+id/account_settings_option4_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/account_settings_option3_edittxt"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/account_settings_option4_title_txt"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border"
                    app:labelColor="@drawable/gray3_to_white_text"
                    app:labelSize="8"
                    app:labelText="@string/label_amount"/>

	            <EditText
	                android:id="@+id/account_settings_option5_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/account_settings_option4_edittxt"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/account_settings_option5_title_txt"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border"  />

	        </RelativeLayout>
	
	        <Button
	            android:id="@+id/account_settings_save_button"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="10dip"
                android:background="@drawable/perf_paper_selector"
	            android:minHeight="50dip"
	            android:textColor="@color/primaryColor" />
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>