<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/handset_exclusions_container"
    android:layout_width="match_parent"
    xmlns:app="    http://schemas.android.com/apk/res/main.java.com.moneydesktop.finance"
    android:layout_height="60dip"
    android:background="@drawable/grey_to_dark_grey_list_selector"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/handset_exclude_checkbox"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:gravity="clip_vertical"
        android:background="@drawable/checkbox_gray_selector"
        android:button="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/gray7" />

    <TextView
        android:id="@+id/handset_exclude_txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/handset_exclude_checkbox"
        android:layout_alignTop="@id/handset_exclude_checkbox"
        android:layout_alignBottom="@id/handset_exclude_checkbox"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:textColor="@color/gray7" />

    <com.moneydesktop.finance.views.LineView
        android:id="@+id/view_break"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:dashLength="3dp"
        app:isDashed="true"
        app:lineColor="@color/gray2"
        app:lineStrokeWidth="2dp" />

</RelativeLayout>