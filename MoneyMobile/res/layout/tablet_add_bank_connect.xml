<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical" >

    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	    <LinearLayout
	        android:id="@+id/add_bank_connect_container"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="3dip"
	        android:layout_marginRight="3dip"
	        android:background="@drawable/gray_border"
	        android:orientation="vertical" >
	
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="3dip"
	            android:background="@color/white"
	            android:paddingBottom="10dip"
	            android:paddingTop="10dip" >
	           
	            <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
	            <LinearLayout
	                android:layout_width="0px"
	                android:layout_height="0px"
	                android:focusable="true"
	                android:focusableInTouchMode="true" />

  	            <TextView 
  	                android:id="@+id/add_account_title"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/add_account_enter_credentials"
	                android:textColor="@color/gray7"
  	                android:paddingLeft="5dip"
	                android:paddingTop="10dip"
	                android:paddingBottom="10dip"
	                android:layout_marginTop="20dip"
	                android:layout_marginLeft="190dip"/>
	            	
	            <TextView
	                android:id="@+id/add_account_connect_option1_title_txt"
	                android:layout_width="150dip"
	                android:layout_height="50dip"
	                android:layout_marginLeft="-2dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" 
	                android:layout_below="@id/add_account_title"/>
	
	            <TextView
	                android:id="@+id/add_account_connect_option2_title_txt"
	                android:layout_width="150dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/add_account_connect_option1_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	            
	       	    <TextView
	                android:id="@+id/add_account_connect_option3_title_txt"
	                android:layout_width="150dip"
	                android:layout_height="50dip"
	                android:layout_below="@id/add_account_connect_option2_title_txt"
	                android:layout_marginLeft="-2dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/tablet_grey_tab"
	                android:gravity="center_vertical"
	                android:paddingLeft="8dip"
	                android:textColor="@color/white" />
	            
	
	            <EditText
	                android:id="@+id/add_account_connect_option1_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:paddingLeft="10dip"
	                android:layout_toRightOf="@id/add_account_connect_option1_title_txt"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:layout_below="@id/add_account_title" 
	                android:background="@drawable/edit_text_border" />
	
	            <EditText
	                android:id="@+id/add_account_connect_option2_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/add_account_connect_option1_edittxt"
	                android:layout_marginLeft="20dip"
	                android:layout_marginRight="20dip"
	                android:inputType="textPassword"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/add_account_connect_option2_title_txt"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border" />
	                
	            <EditText
	                android:id="@+id/add_account_connect_option3_edittxt"
	                android:layout_width="fill_parent"
	                android:layout_height="55dip"
	                android:layout_below="@id/add_account_connect_option2_edittxt"
	                android:layout_marginLeft="20dip"
	                android:inputType="textPassword"
	                android:layout_marginRight="20dip"
	                android:layout_marginTop="15dip"
	                android:layout_toRightOf="@id/add_account_connect_option3_title_txt"
	                android:paddingLeft="10dip"
	                android:gravity="left|center_vertical"
	                android:textColor="@color/gray5"
	                android:background="@drawable/edit_text_border" />
	            
	            
	            <TextView 
	                android:id="@+id/add_account_connect_checkbox_header"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="5dip"
	                android:paddingTop="10dip"
	                android:paddingBottom="10dip"
	                android:textColor="@color/gray7"
	                android:text="@string/account_transaction_type"
	                android:layout_below="@id/add_account_connect_option3_edittxt"
	                android:layout_alignLeft="@id/add_account_title"
	                android:layout_marginRight="20dip"
	                android:visibility="gone"/>
	            
	            <CheckBox 
	                android:id="@+id/add_account_connect_checkbox_personal"
	                android:layout_height="30dip"
	                android:layout_width="30dip"
                    android:button="@null"
	                android:layout_below="@id/add_account_connect_checkbox_header"
	                android:layout_alignLeft="@id/add_account_connect_checkbox_header"
	                android:background="@drawable/checkbox_gray_selector"
	                android:textColor="@color/gray7"
	                android:visibility="gone"/>
	            
                <TextView
				     android:id="@+id/add_account_connect_checkbox_txt1"
				     android:layout_width="wrap_content"
				     android:layout_height="match_parent"
				     android:layout_toRightOf="@id/add_account_connect_checkbox_personal"
				     android:text="@string/personal"
   	                 android:textColor="@color/gray7"
   	                 android:layout_marginLeft="10dip"
   	                 android:layout_below="@id/add_account_connect_checkbox_header"
   	                 android:layout_alignBottom="@id/add_account_connect_checkbox_personal"
				     android:gravity="center_vertical" 
				     android:visibility="gone"/>
	            
	            <CheckBox 
	                android:id="@+id/add_account_connect_checkbox_business"
	                android:layout_height="30dip"
	                android:layout_width="30dip"
	                android:layout_toRightOf="@id/add_account_connect_checkbox_txt1"
	                android:layout_below="@id/add_account_connect_checkbox_header"
	                android:layout_marginLeft="10dip"
                    android:button="@null"
	                android:background="@drawable/checkbox_gray_selector"
	                android:textColor="@color/gray7"
	                android:visibility="gone"/>
	            
                <TextView
				     android:id="@+id/add_account_connect_checkbox_txt2"
				     android:layout_width="wrap_content"
				     android:layout_height="match_parent"
				     android:layout_marginLeft="10dip"
				     android:text="@string/business"
				     android:layout_below="@id/add_account_connect_checkbox_header"
				     android:layout_toRightOf="@id/add_account_connect_checkbox_business"
				     android:layout_alignBottom="@id/add_account_connect_checkbox_business"
   	                 android:textColor="@color/gray7"
				     android:gravity="center_vertical" 
				     android:visibility="gone"/>
	            
	            
	        </RelativeLayout>
	
	        <Button
	            android:id="@+id/add_account_save_button"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/perf_paper"
	            android:minHeight="50dip"
	            android:text="@string/connect"
	            android:textColor="@color/primaryColor" />
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>