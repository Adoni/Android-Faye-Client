<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="    http://schemas.android.com/apk/res/main.java.com.moneydesktop.finance"
    android:id="@+id/handset_account_type"
    android:layout_width="fill_parent"
    android:layout_height="35dip"
    android:layout_gravity="center_vertical"
    android:background="@color/gray2" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/handset_account_type_name"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_weight=".75"
            android:gravity="center_vertical"
            android:textColor="@color/white" />

        <com.moneydesktop.finance.views.LineView
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_marginTop="1dip"
            android:layout_weight=".01"
            app:isDashed="false"
            app:isVertical="true"
            app:lineColor="@color/gray1"
            app:lineStrokeWidth="3dp" />

        <TextView
            android:id="@+id/handset_account_type_sum"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_marginRight="5dip"
            android:layout_weight=".24"
            android:gravity="right|center_vertical"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>