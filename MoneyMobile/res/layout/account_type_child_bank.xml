<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:id="@+id/account_type_child_bank_container"
    android:layout_width="200dip"
    android:layout_height="200dip" >

    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:src="@drawable/tablet_accounts_bookbacking" />

    <LinearLayout
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_weight="0.2"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/tablet_account_type_bank_logo"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/tablet_account_type_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="30dip"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dip"
            android:layout_weight="0.25"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.moneydesktop.finance.views.LineView
                android:layout_width="wrap_content"
                android:layout_height="55dip"
                android:layout_marginLeft="25dip"
                android:gravity="center_vertical"
                app:dashLength="4"
                app:isDashed="true"
                app:isVertical="true"
                app:lineColor="@color/primaryColor"
                app:lineStrokeWidth="3" />

            <TextView
                android:id="@+id/tablet_account_type_bank_sum"
                style="@style/text_blue"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:textSize="22dip" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_weight="0.35" />
    </LinearLayout>

</FrameLayout>