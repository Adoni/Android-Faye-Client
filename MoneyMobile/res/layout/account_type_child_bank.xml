<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
   	     android:layout_width="200dip"
		 android:layout_height="200dip">

    <ImageView android:layout_height="200dip"
	     android:layout_width="200dip"
	     android:src="@drawable/tablet_accounts_bookbacking"/>
    
	<LinearLayout
	     android:layout_width="200dip"
		 android:layout_height="200dip"
		 android:orientation="vertical" 
		 android:weightSum="1">
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.16"
            android:layout_marginLeft="35dip"
	        android:gravity="center_vertical" >

	        <ImageView
	            android:id="@+id/tablet_account_type_bank_logo"
	            android:layout_width="50dip"
	            android:layout_height="50dip"
	            android:gravity="center_vertical"/>
	        
	    </LinearLayout>
	 
		 <TextView
		     android:id="@+id/tablet_account_type_bank_name"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="35dip"
		     android:layout_marginRight="30dip"
		     android:textColor="@color/black"
		     android:layout_weight="0.08"
		     android:gravity="center_vertical" />
		
		 
		 
		 
 	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.41"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="30dip"
		    android:orientation="horizontal"
	        android:gravity="center_vertical" >

	        <ImageView
	            android:layout_width="0dip"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"
	            android:layout_weight=".22"
		        android:layout_marginLeft="-10dip"
	            android:src="@drawable/dotted_line_vertical_blue" />

    	     <TextView
		         android:id="@+id/tablet_account_type_bank_sum"
		         style="@style/text_blue"
		         android:textSize="22dip"
		         android:layout_width="0dip"
		         android:layout_marginLeft="-25dip"
		         android:layout_weight=".5"
		         android:gravity="center_vertical"
		         android:layout_height="fill_parent"/>	      
		           
	    </LinearLayout>
	    
 	    
	 	 <TextView
	 	     android:layout_width="match_parent"
	 	     android:layout_height="wrap_content"
		     android:layout_marginLeft="30dip"
		     android:layout_marginRight="30dip"
	 	     android:layout_weight="0.35" />
	 
	</LinearLayout>
	
</FrameLayout>