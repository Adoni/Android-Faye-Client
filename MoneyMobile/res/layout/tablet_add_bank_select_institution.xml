<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_bank_select_institution_container" >
    
    
    <EditText
               android:id="@+id/add_bank_filter_institution"
               android:layout_width="fill_parent"
               android:layout_height="50dip"
               android:background="@color/white"
               android:gravity="center_vertical"
               android:hint="@string/add_account_search_box" 
               android:layout_marginLeft="20dip"
               android:layout_marginRight="20dip"
               android:layout_marginTop="3dip"
               android:layout_marginBottom="10dip"
               android:textSize="12sp"
               android:paddingLeft="10dip"
               android:drawableLeft="@drawable/tablet_txns_searchicon"/>
    
    
    <ListView 
        android:id="@+id/add_bank_institution_list"
          android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_bank_filter_institution"
        android:divider="@color/transparent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="3dip"
        android:listSelector="@drawable/white_list_selector"
        android:dividerHeight="5dip"
        />


</RelativeLayout>