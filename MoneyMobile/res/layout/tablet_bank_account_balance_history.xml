<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray3">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/gray_border_with_white_background"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dip"
                android:layout_marginBottom="3dip"
                android:focusable="false"
                android:weightSum="1"
                android:background="@drawable/grid_repeat">

            <com.moneydesktop.finance.views.barchart.BarChartView
                android:id="@+id/tablet_bank_account_balance_chart"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:duplicateParentState="false"
                android:layout_marginBottom="25dip"
                android:layout_marginLeft="15dip"
                android:layout_weight=".65"/>


            <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/gray_border_with_white_background_transparent"
                    android:layout_marginTop="25dip"
                    android:layout_marginBottom="25dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_weight=".35">

                <com.moneydesktop.finance.views.AmazingListView
                    android:id="@+id/transactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:dividerHeight="0dp"
                    android:divider="@color/transparent"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>