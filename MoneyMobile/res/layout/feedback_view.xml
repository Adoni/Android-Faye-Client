<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="    http://schemas.android.com/apk/res/main.java.com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="none" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/description"
            android:src="@drawable/phone_logo_small" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/logo2"
            android:gravity="center"
            android:text="@string/feedback_title"
            android:textColor="@color/gray7" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/feedback_message"
            android:textColor="@color/gray7" />

        <LinearLayout
            android:id="@+id/feedback_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <com.moneydesktop.finance.views.LineView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dashLength="2dp"
                app:isDashed="true"
                app:lineColor="@color/gray2"
                app:lineStrokeWidth="2dp" />

            <com.moneydesktop.finance.views.LabelEditText
                android:id="@+id/feedback_name"
                style="@style/field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:textSize="25sp"
                app:labelColor="@drawable/gray3_to_white_text"
                app:labelSize="8"
                app:labelText="@string/signup_name" />

            <com.moneydesktop.finance.views.LineView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dashLength="2dp"
                app:isDashed="true"
                app:lineColor="@color/gray2"
                app:lineStrokeWidth="2dp" />

            <com.moneydesktop.finance.views.LabelEditText
                android:id="@+id/feedback_email"
                style="@style/field"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:textSize="25sp"
                app:labelColor="@drawable/gray3_to_white_text"
                app:labelSize="8"
                app:labelText="@string/signup_email" />

            <com.moneydesktop.finance.views.LineView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dashLength="2dp"
                app:isDashed="true"
                app:lineColor="@color/gray2"
                app:lineStrokeWidth="2dp" />

            <com.moneydesktop.finance.views.LabelEditText
                android:id="@+id/feedback"
                style="@style/field"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:textSize="25sp"
                android:gravity="top"
                android:hint="@string/feedback_hint"
                android:textColorHint="@drawable/gray3_to_white_text"
                app:labelColor="@drawable/gray3_to_white_text"
                app:labelSize="8"
                app:labelText="@string/feedback_label" />

            <com.moneydesktop.finance.views.LineView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dashLength="2dp"
                app:isDashed="true"
                app:lineColor="@color/gray2"
                app:lineStrokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_view_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_info"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/submit"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/button_submit" />

            <TextView
                android:id="@+id/cancel"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/button_cancel" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>