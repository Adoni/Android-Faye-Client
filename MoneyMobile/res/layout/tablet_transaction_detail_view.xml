<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent50percent"
    android:visibility="invisible" >
    
	<EditText
	    android:id="@+id/dummy"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:inputType="none" />

	<LinearLayout 
	    android:id="@+id/menu_container"
	    android:layout_width="200dp"
	    android:layout_height="@dimen/tablet_detail_height"
	    android:background="@color/white"
	    android:orientation="vertical"
        android:visibility="invisible"
        android:clickable="true" >
    
	    <TextView
	        android:id="@+id/menu_title"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
    		android:layout_marginLeft="15dp"
	        android:gravity="center_vertical|left"
	        android:textColor="@color/primaryColor"
	        android:text="@string/action_menu" />
		        
        <com.moneydesktop.finance.views.LineView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:lineColor="@color/gray5"
            app:lineStrokeWidth="2dp" />

		<LinearLayout 
		    android:id="@+id/email_menu_item"
		    android:layout_width="match_parent"
	        android:layout_height="50dp"
		    android:orientation="horizontal"
		    android:background="@drawable/white_to_primary" >
    
		    <TextView
		        android:id="@+id/email_icon"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
		        android:gravity="center_vertical|left"
		        android:textColor="@drawable/primary_to_white_text"
		        android:text="@string/icon_email" />
	    
		    <TextView
		        android:id="@+id/email_label"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
		        android:gravity="center_vertical|left"
		        android:textColor="@drawable/gray7_to_white"
		        android:text="@string/label_email" />
		    
	    </LinearLayout>
		        
        <com.moneydesktop.finance.views.LineView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:lineColor="@color/gray5"
            app:isDashed="true"
            app:dashLength="2dp"
            app:lineStrokeWidth="2dp" />

		<LinearLayout
		    android:id="@+id/delete_menu_item"
		    android:layout_width="match_parent"
	        android:layout_height="50dp"
		    android:orientation="horizontal"
		    android:background="@drawable/white_to_primary" >
    
		    <TextView
		        android:id="@+id/delete_icon"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_marginLeft="15dp"
	    		android:layout_marginRight="15dp"
		        android:gravity="center_vertical|left"
		        android:textColor="@drawable/primary_to_white_text"
		        android:text="@string/icon_trash" />
	    
		    <TextView
		        android:id="@+id/delete_label"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
		        android:gravity="center_vertical|left"
		        android:textColor="@drawable/gray7_to_white"
		        android:text="@string/label_delete" />
		    
	    </LinearLayout>
		        
        <com.moneydesktop.finance.views.LineView
            android:id="@+id/delete_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:lineColor="@color/gray5"
            app:isDashed="true"
            app:dashLength="2dp"
            app:lineStrokeWidth="2dp" />
	    
	</LinearLayout>
    
    <TextView android:id="@+id/menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/menu_container"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/icon_share"
        android:background="@color/primaryColor"
        android:visibility="invisible" />
    
	<RelativeLayout 
        android:id="@id/container"
        android:layout_width="@dimen/tablet_detail_width"
    	android:layout_height="@dimen/tablet_detail_height"
        android:layout_centerInParent="true"
    	android:visibility="invisible" >
	    
	    <LinearLayout
	        android:id="@+id/detail_container"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:paddingTop="15dp"
	    	android:orientation="vertical"
	    	android:background="@color/white"
        	android:clickable="true" >
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="13"
	            android:orientation="horizontal"
	            android:gravity="center_vertical">
		        
		        <ImageView
		            android:id="@+id/bank_image"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginRight="20dp"
					android:layout_marginLeft="20dp"
					android:scaleType="fitCenter"
					android:src="@drawable/bank"
		            android:contentDescription="@string/description" />
		        
		        <com.moneydesktop.finance.views.LineView
		            android:id="@+id/divider"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            app:lineColor="@color/primaryColor"
		            app:lineStrokeWidth="2dp"
		            app:isVertical="true" />
	        
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
		            android:orientation="vertical">
		        
			        <TextView
			            android:id="@+id/account_name"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="@color/gray7"
			            android:textSize="12sp"
			            android:ellipsize="end" />
			        
			        <TextView
			            android:id="@+id/bank_name"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="@color/gray7"
			            android:textSize="10sp"
			            android:ellipsize="end" />
			        
		        </LinearLayout>
		        
	        </LinearLayout>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp" />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="17"
	            android:orientation="horizontal">
	
	            <com.moneydesktop.finance.views.LabelEditText
	                android:id="@+id/amount"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="50"
	                android:background="@drawable/transparent_to_primary"
	                android:inputType="none"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:singleLine="true"
	                android:textColor="@drawable/primary_to_white_text"
	                app:labelColor="@drawable/gray3_to_white_text"
	                app:labelSize="10"
	                app:labelText="@string/label_amount" />
	        
		        <com.moneydesktop.finance.views.LineView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            app:lineColor="@color/gray2"
		            app:lineStrokeWidth="2dp"
		            app:isVertical="true" />
	            
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_weight="50"
	                android:layout_height="match_parent"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:gravity="center_vertical">
	        
			        <TextView
			            android:id="@+id/markers_label"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:layout_marginBottom="5dp"
			            android:text="@string/label_other"
			            style="@style/transaction_label"
			            android:visibility="gone" />
	                
	                <ToggleButton 
			            android:id="@+id/flag_b"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:textColor="@color/transparent"
			            android:background="@drawable/business_selector" />
			        
			        <ToggleButton 
			            android:id="@+id/flag_p"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_toRightOf="@id/flag_b"
			            android:layout_marginLeft="15dp"
			            android:textColor="@color/transparent"
			            android:background="@drawable/personal_selector" />
			        
			        <ToggleButton 
			            android:id="@+id/flag_c"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_toRightOf="@id/flag_p"
			            android:layout_marginLeft="15dp"
			            android:textColor="@color/transparent"
			            android:background="@drawable/cleared_selector" />
			        
			        <ToggleButton 
			            android:id="@+id/flag"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_toRightOf="@id/flag_c"
			            android:layout_marginLeft="15dp"
			            android:textColor="@color/transparent"
			            android:background="@drawable/flagged_selector" />
	                
	            </RelativeLayout>
	            
	        </LinearLayout>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp"
	            app:isDashed="true"
	            app:dashLength="2dp"  />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="13"
	            android:orientation="horizontal">
	
				<com.moneydesktop.finance.views.LabelEditText
				    android:id="@+id/payee"
				    android:layout_width="0dp"
				    android:layout_height="match_parent"
				    android:layout_weight="50"
				    android:background="@drawable/transparent_to_primary"
				    android:imeOptions="actionDone"
				    android:inputType="textCapWords|textNoSuggestions"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:textColor="@drawable/primary_to_white_text"
				    app:labelColor="@drawable/gray3_to_white_text"
				    app:labelSize="10"
				    app:labelText="@string/label_payee" />
	        
		        <com.moneydesktop.finance.views.LineView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            app:lineColor="@color/gray2"
		            app:lineStrokeWidth="2dp"
		            app:isVertical="true" />
		        
		        <com.moneydesktop.finance.views.LabelEditText
	                android:id="@+id/memo"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="50"
	                android:background="@drawable/transparent_to_primary"
	                android:imeOptions="actionDone"
	                android:inputType="textCapSentences"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:textColor="@drawable/gray7_to_white"
	                app:labelColor="@drawable/gray3_to_white_text"
	                app:labelSize="10"
	                app:labelText="@string/label_memo" />
	            
	        </LinearLayout>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp"
	            app:isDashed="true"
	            app:dashLength="2dp"  />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="13"
	            android:orientation="horizontal">
	
				<com.moneydesktop.finance.views.LabelEditText
				    android:id="@+id/date"
				    android:layout_width="0dp"
				    android:layout_weight="50"
				    android:layout_height="match_parent"
				    android:background="@drawable/transparent_to_primary"
				    android:imeOptions="actionDone"
				    android:inputType="date"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:textColor="@drawable/primary_to_white_text"
				    app:labelColor="@drawable/gray3_to_white_text"
				    app:labelSize="10"
				    app:labelText="@string/label_date" />
	        
		        <com.moneydesktop.finance.views.LineView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            app:lineColor="@color/gray2"
		            app:lineStrokeWidth="2dp"
		            app:isVertical="true" />
	
	            <com.moneydesktop.finance.views.LabelEditText
	                android:id="@+id/tags"
	                android:tag="tags"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="50"
	                android:background="@drawable/transparent_to_primary"
	                android:inputType="none|textNoSuggestions"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:textColor="@drawable/gray7_to_white"
	                app:labelColor="@drawable/gray3_to_white_text"
	                app:labelSize="10"
	                app:labelText="@string/label_tags" />
	            
	        </LinearLayout>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp"
	            app:isDashed="true"
	            app:dashLength="2dp" />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="13"
	            android:orientation="horizontal">
	
	            <com.moneydesktop.finance.views.LabelEditText
	                android:id="@+id/category"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="50"
	                android:background="@drawable/transparent_to_primary"
	                android:inputType="none|textNoSuggestions"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:textColor="@drawable/primary_to_white_text"
	                app:labelColor="@drawable/gray3_to_white_text"
	                app:labelSize="10"
	                app:labelText="@string/label_category" />
	        
		        <com.moneydesktop.finance.views.LineView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            app:lineColor="@color/gray2"
		            app:lineStrokeWidth="2dp"
		            app:isVertical="true" />
	
	            <com.moneydesktop.finance.views.LabelEditText
	                android:id="@+id/stmt"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="50"
	                android:background="@drawable/transparent_to_primary"
	                android:inputType="none|textNoSuggestions"
	                android:paddingLeft="10dp"
	                android:paddingRight="10dp"
	                android:textColor="@drawable/gray7_to_white"
	                app:labelColor="@drawable/gray3_to_white_text"
	                app:labelSize="10"
	                app:labelText="@string/label_stmt" />
	            
	        </LinearLayout>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp" />
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="2dp"
	            app:lineColor="@color/gray2"
	            app:lineStrokeWidth="2dp" />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="31"
	            android:orientation="horizontal" >
	            
	        </LinearLayout>
	        
	    </LinearLayout>
    
	    <View 
	        android:id="@+id/shader"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	        android:background="@drawable/shader" />
	    
	</RelativeLayout>

</RelativeLayout>