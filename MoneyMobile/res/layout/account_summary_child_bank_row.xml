<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/main.java.com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tablet_account_summary_row_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:baselineAligned="false" >

        <!-- Left Side Grey -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".07"
            android:background="@color/gray2" />

        <!-- Bank logo -->
        <RelativeLayout
            android:id="@+id/account_summary_bank_logo_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".07" >

            <ImageView
                android:id="@+id/account_summary_child_bank_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description" />

            <TextView
                android:id="@+id/account_summary_child_property_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/gray5"
                android:visibility="gone"/>
        </RelativeLayout>

        <!-- Bank name and linked status -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".60" >

            <!-- Account Name -->
            <TextView
                android:id="@+id/account_summary_child_bank_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dip"
                android:textColor="@color/gray4" />

            <!-- Account Linked Status -->
            <TextView
                android:id="@+id/account_summary_child_bank_account_linked_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_summary_child_bank_account_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray2" />

            <!-- Last Updated label -->
            <TextView
                android:id="@+id/account_summary_child_bank_account_last_updated_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/account_summary_child_bank_account_linked_status"
                android:layout_marginLeft="5dip"
                android:layout_below="@id/account_summary_child_bank_account_name"
                android:textColor="@color/gray2" />

            <!-- Last updated value -->
            <TextView
                android:id="@+id/account_summary_child_bank_account_last_updated_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_summary_child_bank_account_name"
                android:layout_toRightOf="@id/account_summary_child_bank_account_last_updated_label"
                android:layout_marginLeft="5dip"
                android:textColor="@color/primaryColor" />
        </RelativeLayout>

        <!-- Bank Account sum -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".26" >

            <!-- Bank Account sum value -->
            <TextView
                android:id="@+id/account_summary_child_bank_account_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/gray4" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/account_summary_history_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

        <LinearLayout
                android:layout_height="100dip"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:orientation="horizontal">

            <!-- Left Side Grey -->
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".07"
                    android:background="@color/gray2" />

            <RelativeLayout
                    android:id="@+id/tablet_account_summary_bar_graph_history_container"
                    android:layout_height="100dip"
                    android:layout_width="0dp"
                    android:layout_weight=".93"
                    android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/tablet_account_summary_bar_graph_button_container"
                android:layout_height="50dip"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:weightSum="1"
                android:layout_gravity="center_vertical|left"
                android:orientation="horizontal">

            <!-- Left Side Grey -->
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".07"
                    android:background="@color/gray2" />

            <TextView
                    android:id="@+id/view_transactions_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/primaryColor"
                    android:gravity="center|right"
                    android:layout_weight=".08"/>

            <TextView
                    android:id="@+id/view_transactions_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dip"
                    android:layout_weight=".25"
                    android:gravity="left|center_vertical"
                    android:text="@string/label_view_trans"/>

            <com.moneydesktop.finance.views.LineView
                    android:layout_width="0dp"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                    app:dashLength="2dp"
                    app:isDashed="true"
                    app:isVertical="true"
                    android:layout_weight=".03"
                    app:lineColor="@color/black"
                    app:lineStrokeWidth="3dp" />

            <TextView
                    android:id="@+id/edit_settings_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:gravity="center"
                    android:textColor="@color/primaryColor"/>

            <TextView
                    android:id="@+id/edit_settings_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".52"
                    android:gravity="left|center_vertical"
                    android:text="@string/label_edit_settings"/>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray2"/>

</LinearLayout>