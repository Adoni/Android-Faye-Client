<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/handset_search_institution_container"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/gray8">
        
        <TextView 
            android:id="@+id/handset_search_institution_img"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_marginLeft="10dip"
            android:text="@string/icon_search"/>
        
        <com.moneydesktop.finance.views.LabelEditText 
            android:id="@+id/handset_search_institution_box"
            style="@style/field"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/gray8"
            app:labelText=""
            android:textSize="20sp"
            app:labelColor="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/add_account_type_search_for_institution"/>
            
    </LinearLayout>
    

    <ListView 
        android:id="@+id/handset_search_institution_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/handset_search_institution_container"/>

</RelativeLayout>