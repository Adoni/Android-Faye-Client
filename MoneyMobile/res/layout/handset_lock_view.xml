<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phone_wood" >
	    
    <com.moneydesktop.finance.views.WheelToggle
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/toggle"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:background="@drawable/white_to_gray"
        android:text="@string/label_change_lock"
        android:textColor="@drawable/text_blue_white" />
        
</RelativeLayout>