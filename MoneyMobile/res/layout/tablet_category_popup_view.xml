<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:layout_width="500dp"
    android:layout_height="match_parent" >

    <com.moneydesktop.finance.views.ClearEditText
        android:id="@+id/search"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		android:padding="13dp"
		android:inputType="text"
        android:background="@color/white"
        android:singleLine="true"
        android:textColor="@color/gray9"
        android:textColorHint="@color/gray4"
        app:iconText="8"
        app:clearText="X"
        app:iconTextColor="@color/primaryColor"
        android:hint="@string/category_search"
        android:imeOptions="actionDone"/>

    <com.moneydesktop.finance.views.UltimateListView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search"
        android:background="@color/white"
        android:groupIndicator="@null"
        android:visibility="invisible" />
    
	<com.moneydesktop.finance.views.SpinnerView
	    android:id="@+id/spinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true" />
	    
</RelativeLayout>