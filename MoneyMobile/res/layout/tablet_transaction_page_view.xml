<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.moneydesktop.finance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
	<EditText
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:inputType="none" />

    <View
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/gray1" />

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/spiral"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/spiral_background"
        android:contentDescription="@string/description" />

    <View
        android:id="@+id/white_right"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/spiral"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/white_right"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tablet_header_1"
            android:orientation="horizontal" >

            <com.moneydesktop.finance.views.ClearEditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="49"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/gray3"
                app:iconText="@string/icon_search"
                app:clearText="@string/icon_cancel"
                android:hint="@string/hint_search_transactions"
                android:imeOptions="actionSearch"/>
	        
	        <com.moneydesktop.finance.views.LineView
	            android:id="@+id/line_bug"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="2dp"
	            app:lineColor="@color/gray3"
	            app:lineStrokeWidth="2dp"
	            app:isVertical="true" />

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="51"
                android:background="@color/white"
                android:gravity="center_vertical|right" >
                
                <ImageView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/tablet_txns_sumicon"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/description" />
                
                <ImageView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/tablet_txns_emailicon"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/description" />
                
                <ImageView
                    android:id="@+id/print"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/tablet_print"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/description"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/report"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/tablet_txns_reporticon"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/description"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/tablet_txns_plusicon"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/description" />
                
           </LinearLayout>
            
        </LinearLayout>
	        
        <com.moneydesktop.finance.views.LineView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-1dp"
            app:lineColor="@color/gray3"
            app:lineStrokeWidth="2dp" />

        <LinearLayout
            android:id="@+id/list_headers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tablet_header_2"
            android:orientation="horizontal"
            android:background="@color/white" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <com.moneydesktop.finance.views.HeaderView
                android:id="@+id/date_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/label_date"
                android:textColor="@drawable/gray2_to_white_text"
                android:background="@drawable/transparent_to_primary"
                android:clickable="true" />
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            app:lineColor="@color/gray3"
	            app:lineStrokeWidth="2dp"
	            app:isVertical="true" />

            <com.moneydesktop.finance.views.HeaderView
                android:id="@+id/payee_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/label_payee"
                android:textColor="@drawable/gray2_to_white_text"
                android:background="@drawable/transparent_to_primary"
                android:clickable="true" />
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            app:lineColor="@color/gray3"
	            app:lineStrokeWidth="2dp"
	            app:isVertical="true" />

            <com.moneydesktop.finance.views.HeaderView
                android:id="@+id/category_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="26"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/label_category"
                android:textColor="@drawable/gray2_to_white_text"
                android:background="@drawable/transparent_to_primary"
                android:clickable="true" />
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            app:lineColor="@color/gray3"
	            app:lineStrokeWidth="2dp"
	            app:isVertical="true" />

            <com.moneydesktop.finance.views.HeaderView
                android:id="@+id/amount_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="@string/label_amount"
                android:textColor="@drawable/gray2_to_white_text"
                android:background="@drawable/transparent_to_primary"
                android:clickable="true" />
	        
	        <com.moneydesktop.finance.views.LineView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            app:lineColor="@color/gray3"
	            app:lineStrokeWidth="2dp"
	            app:isVertical="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray3" />
    </LinearLayout>

    <com.moneydesktop.finance.views.AmazingListView
        android:id="@+id/transactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/header_row"
        android:layout_toRightOf="@id/white_right"
        android:divider="@color/gray1"
        android:dividerHeight="1dp"
        android:background="@color/white"
        android:visibility="gone" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_top" />

    <com.moneydesktop.finance.views.HorizontalScroller
        android:id="@+id/date_scroller"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >
        
        <com.moneydesktop.finance.views.DateRangeView
            android:id="@+id/date_range"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
        	android:paddingLeft="80dp" />
        
    </com.moneydesktop.finance.views.HorizontalScroller>

</RelativeLayout>