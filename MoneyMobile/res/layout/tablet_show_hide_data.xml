<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical" >

    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	    <LinearLayout
	        android:id="@+id/account_settings_container"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="3dip"
	        android:layout_marginRight="3dip"
	        android:background="@drawable/gray_border"
	        android:orientation="vertical" >
	
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="3dip"
	            android:background="@color/white"
	            android:paddingBottom="10dip"
	            android:paddingTop="10dip" >
	
	           
	             <include layout="@layout/tablet_account_linear_summary" android:id="@+id/linear_account_summary"/>
	            
	             <CheckBox 
	                android:id="@+id/exclude_transfers_from_income"
	                android:layout_height="30dip"
	                android:layout_width="30dip"
                    android:button="@null"
	                android:layout_below="@id/linear_account_summary"
	                android:layout_marginTop="10dip"
	                android:layout_marginLeft="10dip"
	                android:background="@drawable/checkbox_gray_selector"
	                android:textColor="@color/gray7"/>
	            
                <TextView
				     android:id="@+id/exclude_transfers_from_income_txt"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:layout_toRightOf="@id/exclude_transfers_from_income"
				     android:text="some text 1"
				     android:layout_marginLeft="10dip"
   	                 android:textColor="@color/gray7"
   	                 android:layout_alignBottom="@id/exclude_transfers_from_income"
   	                 android:layout_alignTop="@id/exclude_transfers_from_income"
				     android:gravity="center_vertical" />
	            
	            <CheckBox 
	                android:id="@+id/exclude_transfers_from_expense"
	                android:layout_height="30dip"
	                android:layout_width="30dip"
	                android:layout_below="@id/exclude_transfers_from_income"
	                android:layout_marginLeft="10dip"
	                android:layout_marginTop="10dip"
                    android:button="@null"
	                android:background="@drawable/checkbox_gray_selector"
	                android:textColor="@color/gray7"/>
	            
                <TextView
				     android:id="@+id/exclude_transfers_from_expenses_txt"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:text="some text 2"
				     android:layout_marginLeft="10dip"
				     android:layout_toRightOf="@id/exclude_transfers_from_expense"
				     android:layout_alignBottom="@id/exclude_transfers_from_expense"
				     android:layout_alignTop="@id/exclude_transfers_from_expense"
   	                 android:textColor="@color/gray7"
				     android:gravity="center_vertical" />
	            
	        </RelativeLayout>
	
	        <Button
	            android:id="@+id/tablet_account_linear_summary_save_button"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/perf_paper"
	            android:minHeight="50dip"
	            android:textColor="@color/primaryColor" />
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>