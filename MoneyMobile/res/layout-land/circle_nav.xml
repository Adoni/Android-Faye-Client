<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent50percent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/option_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tablet_nav_blue_circle" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tablet_newnav_mainbutton_grey" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="300dip"
        android:gravity="center" >

        <Button
            android:id="@+id/nav_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tablet_newnav_settings_white" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="300dip"
        android:gravity="center" >

        <Button
            android:id="@+id/nav_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tablet_newnav_dashboard_white" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="300dip"
        android:gravity="center" >

        <Button
            android:id="@+id/nav_account_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tablet_newnav_accounts_white" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="300dip"
        android:gravity="center" >

        <Button
            android:id="@+id/nav_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tablet_newnav_reports_white" />
        
    </LinearLayout>

</RelativeLayout>