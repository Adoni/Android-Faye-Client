<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelEditText">
        <attr name="labelColor" format="color" />
        <attr name="labelSize" format="dimension" />
        <attr name="labelText" format="string" />
    </declare-styleable>
    <declare-styleable name="Caret">
        <attr name="color" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension" />
        <attr name="rotation" format="float" />
    </declare-styleable>
    
    <declare-styleable name="Settings">
        <attr name="iconColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="title" format="string" />
        <attr name="text" format="string" />
        <attr name="icon" format="string" />
        <attr name="iconSize" format="dimension" />
    </declare-styleable>

    <!-- Identifier for the child that represents the drawer's handle. -->
       <attr name="handle" format="reference"/>
       <!-- Identifier for the child that represents the drawer's content. -->
       <attr name="content" format="reference" />
       <!-- Orientation of the SlidingDrawer. -->
       <!-- Extra offset for the handle at the bottom of the SlidingDrawer. -->
       <attr name="bottomOffset" format="dimension"  />
       <!-- Extra offset for the handle at the top of the SlidingDrawer. -->
       <attr name="topOffset" format="dimension"  />
       <!-- Indicates whether the drawer can be opened/closed by a single tap
   on the handle.  (If false, the user must drag or fling, or click
   using the trackball, to open/close the drawer.)  Default is true. -->
       <attr name="allowSingleTap" format="boolean" />
       <!-- Indicates whether the drawer should be opened/closed with an animation
   when the user clicks the handle. Default is true. -->
       <attr name="animateOnClick" format="boolean" />

    <attr name="orientation">

        Defines an horizontal widget.
        <enum name="horizontal" value="0" />
        Defines a vertical widget.
        <enum name="vertical" value="1" />
    </attr>
        
    <declare-styleable name="VerticalText">
       <attr name="isLeft" format="boolean" />
    </declare-styleable>
    
    <attr name="direction">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
        
    <declare-styleable name="BankAccountSlidingDrawer">
        <attr name="handle" />
        <attr name="content" />
        <attr name="bottomOffset" />
        <attr name="topOffset" />
        <attr name="allowSingleTap" />
        <attr name="animateOnClick" />
        <attr name="orientation" />
    </declare-styleable>
</resources>