<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moneydesktop.finance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationContext"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MoneyDesktopTheme"
        android:hardwareAccelerated="true" >
        
        <service android:name=".shared.Services.SyncService" />
        
        <activity android:name="com.crittercism.NotificationActivity" />
        
        <activity
            android:name=".shared.activity.DebugActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name=".handset.activity.DashboardHandsetActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        
        <activity
            android:name=".handset.activity.PopupHandsetActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        
        <activity
            android:name=".handset.activity.LoginHandsetActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
                
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateAlwaysHidden"
        	android:theme="@style/Theme.Start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <activity
            android:name=".tablet.activity.DashboardTabletActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        
        <activity
            android:name=".tablet.activity.LockCodeTabletActivity"
            android:screenOrientation="landscape" />
        
 		<activity
			android:name=".tablet.activity.DropDownTabletActivity"
			android:theme="@style/ActivityDialog" />
        
 		<activity
			android:name=".tablet.activity.PopupTabletActivity"
			android:theme="@style/ActivityDialog" />
        
        <activity
            android:name=".tablet.activity.LoginTabletActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" />
        
        <activity
            android:name="com.moneydesktop.finance.tablet.activity.IntroTabletActivity"
            android:screenOrientation="landscape"/>
        
        <activity
            android:name="com.moneydesktop.finance.handset.activity.IntroHandsetActivity"
            android:screenOrientation="portrait"/>
        
    </application>

</manifest>